generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Plan {
  id                 String         @id @default(cuid())
  name               String
  slug               String         @unique
  description        String?
  priceMonthly       Float
  priceYearly        Float
  currency           String         @default("BRL")
  maxUsers           Int            @default(1)
  maxCampaigns       Int            @default(10)
  maxLeads           Int            @default(500)
  maxIntegrations    Int            @default(2)
  maxCreatives       Int            @default(100)
  maxWhatsappNumbers Int            @default(1)
  hasAiAnalysis      Boolean        @default(false)
  hasAdvancedReports Boolean        @default(false)
  hasAutomation      Boolean        @default(false)
  hasApiAccess       Boolean        @default(false)
  hasPrioritySupport Boolean        @default(false)
  hasWhiteLabel      Boolean        @default(false)
  isActive           Boolean        @default(true)
  isFeatured         Boolean        @default(false)
  sortOrder          Int            @default(0)
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
  organizations      Organization[]

  @@map("plans")
}

model Organization {
  id                   String               @id @default(cuid())
  name                 String
  slug                 String               @unique
  logo                 String?
  website              String?
  planId               String
  subscriptionStatus   SubscriptionStatus   @default(TRIALING)
  trialEndsAt          DateTime?
  subscriptionEndsAt   DateTime?
  stripeCustomerId     String?              @unique
  stripeSubscriptionId String?
  timezone             String               @default("America/Sao_Paulo")
  language             String               @default("pt-BR")
  isActive             Boolean              @default(true)
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  apiKeys              ApiKey[]
  artTemplates         ArtTemplateSaved[]
  auditLogs            AuditLog[]
  campaigns            Campaign[]
  conversations        Conversation[]
  creatives            Creative[]
  integrations         Integration[]
  leads                Lead[]
  members              OrganizationMember[]
  plan                 Plan                 @relation(fields: [planId], references: [id])
  reports              Report[]
  scheduledPosts       ScheduledPost[]
  webhooks             Webhook[]

  @@map("organizations")
}

model User {
  id            String               @id @default(cuid())
  email         String               @unique
  emailVerified DateTime?
  passwordHash  String?
  name          String?
  avatar        String?
  phone         String?
  isActive      Boolean              @default(true)
  lastLoginAt   DateTime?
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
  accounts      Account[]
  memberships   OrganizationMember[]
  sessions      Session[]

  @@map("users")
}

model OrganizationMember {
  id                    String       @id @default(cuid())
  organizationId        String
  userId                String
  role                  MemberRole   @default(MEMBER)
  canManageCampaigns    Boolean      @default(true)
  canManageLeads        Boolean      @default(true)
  canManageIntegrations Boolean      @default(false)
  canManageBilling      Boolean      @default(false)
  canManageMembers      Boolean      @default(false)
  canViewReports        Boolean      @default(true)
  invitedAt             DateTime     @default(now())
  acceptedAt            DateTime?
  isActive              Boolean      @default(true)
  organization          Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user                  User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@map("organization_members")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Integration {
  id                  String              @id @default(cuid())
  organizationId      String
  platform            IntegrationPlatform
  name                String
  accessToken         String
  refreshToken        String?
  tokenExpiresAt      DateTime?
  platformAccountId   String?
  platformAccountName String?
  whatsappPhoneNumber String?
  whatsappPhoneId     String?
  status              IntegrationStatus   @default(PENDING)
  lastSyncAt          DateTime?
  lastErrorAt         DateTime?
  lastError           String?
  isActive            Boolean             @default(true)
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
  adAccounts          AdAccount[]
  campaigns           Campaign[]
  conversations       Conversation[]
  organization        Organization        @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, platform, platformAccountId])
  @@map("integrations")
}

model AdAccount {
  id                  String      @id @default(cuid())
  integrationId       String
  platformAdAccountId String
  name                String
  currency            String      @default("BRL")
  timezone            String?
  isActive            Boolean     @default(true)
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  integration         Integration @relation(fields: [integrationId], references: [id], onDelete: Cascade)
  campaigns           Campaign[]

  @@unique([integrationId, platformAdAccountId])
  @@map("ad_accounts")
}

model Campaign {
  id                 String                 @id @default(cuid())
  organizationId     String
  integrationId      String?
  adAccountId        String?
  platformCampaignId String?
  name               String
  objective          CampaignObjective
  status             CampaignStatus         @default(DRAFT)
  platform           IntegrationPlatform
  budget             Float
  budgetType         BudgetType             @default(DAILY)
  spent              Float                  @default(0)
  startDate          DateTime?
  endDate            DateTime?
  isActive           Boolean                @default(true)
  createdAt          DateTime               @default(now())
  updatedAt          DateTime               @updatedAt
  lastSyncAt         DateTime?
  dailyMetrics       CampaignDailyMetrics[]
  metrics            CampaignMetrics[]
  adAccount          AdAccount?             @relation(fields: [adAccountId], references: [id])
  integration        Integration?           @relation(fields: [integrationId], references: [id])
  organization       Organization           @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  leads              Lead[]

  @@unique([organizationId, platformCampaignId])
  @@index([organizationId, status])
  @@index([organizationId, platform])
  @@map("campaigns")
}

model CampaignMetrics {
  id                  String   @id @default(cuid())
  campaignId          String
  impressions         Int      @default(0)
  reach               Int      @default(0)
  clicks              Int      @default(0)
  ctr                 Float    @default(0)
  cpc                 Float    @default(0)
  cpm                 Float    @default(0)
  conversions         Int      @default(0)
  conversionRate      Float    @default(0)
  costPerConversion   Float    @default(0)
  spent               Float    @default(0)
  roas                Float    @default(0)
  frequency           Float    @default(0)
  videoViews          Int      @default(0)
  videoViewsP25       Int      @default(0)
  videoViewsP50       Int      @default(0)
  videoViewsP75       Int      @default(0)
  videoViewsP100      Int      @default(0)
  videoCompletionRate Float    @default(0)
  likes               Int      @default(0)
  comments            Int      @default(0)
  shares              Int      @default(0)
  saves               Int      @default(0)
  periodStart         DateTime
  periodEnd           DateTime
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  campaign            Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  @@unique([campaignId, periodStart, periodEnd])
  @@map("campaign_metrics")
}

model CampaignDailyMetrics {
  id          String   @id @default(cuid())
  campaignId  String
  date        DateTime @db.Date
  impressions Int      @default(0)
  reach       Int      @default(0)
  clicks      Int      @default(0)
  ctr         Float    @default(0)
  cpc         Float    @default(0)
  cpm         Float    @default(0)
  conversions Int      @default(0)
  spent       Float    @default(0)
  roas        Float    @default(0)
  createdAt   DateTime @default(now())
  campaign    Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  @@unique([campaignId, date])
  @@index([campaignId, date])
  @@map("campaign_daily_metrics")
}

model Lead {
  id             String         @id @default(cuid())
  organizationId String
  campaignId     String?
  name           String
  email          String?
  phone          String?
  source         LeadSource
  sourceDetails  String?
  utmSource      String?
  utmMedium      String?
  utmCampaign    String?
  utmContent     String?
  utmTerm        String?
  status         LeadStatus     @default(NEW)
  value          Float?
  assignedToId   String?
  notes          String?
  customFields   Json?
  convertedAt    DateTime?
  lostAt         DateTime?
  lostReason     String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  conversations  Conversation[]
  history        LeadHistory[]
  campaign       Campaign?      @relation(fields: [campaignId], references: [id])
  organization   Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId, status])
  @@index([organizationId, source])
  @@index([phone])
  @@index([email])
  @@map("leads")
}

model LeadHistory {
  id          String      @id @default(cuid())
  leadId      String
  fromStatus  LeadStatus?
  toStatus    LeadStatus
  note        String?
  changedById String?
  createdAt   DateTime    @default(now())
  lead        Lead        @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@index([leadId, createdAt])
  @@map("lead_history")
}

model Conversation {
  id                     String             @id @default(cuid())
  organizationId         String
  integrationId          String
  leadId                 String?
  platformConversationId String?
  contactName            String
  contactPhone           String
  contactAvatar          String?
  status                 ConversationStatus @default(OPEN)
  unreadCount            Int                @default(0)
  lastMessageAt          DateTime?
  lastMessagePreview     String?
  assignedToId           String?
  isActive               Boolean            @default(true)
  createdAt              DateTime           @default(now())
  updatedAt              DateTime           @updatedAt
  integration            Integration        @relation(fields: [integrationId], references: [id])
  lead                   Lead?              @relation(fields: [leadId], references: [id])
  organization           Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  messages               Message[]

  @@unique([organizationId, integrationId, contactPhone])
  @@index([organizationId, status])
  @@map("conversations")
}

model Message {
  id                String           @id @default(cuid())
  conversationId    String
  platformMessageId String?
  content           String
  type              MessageType      @default(TEXT)
  mediaUrl          String?
  direction         MessageDirection
  status            MessageStatus    @default(SENT)
  senderName        String?
  senderId          String?
  createdAt         DateTime         @default(now())
  conversation      Conversation     @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@map("messages")
}

model Creative {
  id               String               @id @default(cuid())
  organizationId   String
  title            String
  description      String?
  type             CreativeType
  platform         IntegrationPlatform?
  thumbnailUrl     String?
  mediaUrl         String?
  sourceUrl        String?
  sourceAdvertiser String?
  likes            Int?
  comments         Int?
  shares           Int?
  tags             String[]
  folderId         String?
  isFavorite       Boolean              @default(false)
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
  organization     Organization         @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId, type])
  @@map("creatives")
}

model ArtTemplateSaved {
  id             String       @id @default(cuid())
  organizationId String
  templateId     String
  customName     String?
  customizations Json?
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, templateId])
  @@map("art_templates_saved")
}

model ArtTemplate {
  id           String   @id @default(cuid())
  name         String
  description  String?
  niche        String
  type         String
  canvaUrl     String
  thumbnailUrl String?
  downloads    Int      @default(0)
  rating       Float    @default(0)
  ratingCount  Int      @default(0)
  tags         String[]
  isNew        Boolean  @default(false)
  isPremium    Boolean  @default(false)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([niche])
  @@index([type])
  @@map("art_templates")
}

model Webhook {
  id              String       @id @default(cuid())
  organizationId  String
  url             String
  events          String[]
  secret          String
  isActive        Boolean      @default(true)
  lastTriggeredAt DateTime?
  failureCount    Int          @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@map("webhooks")
}

model ApiKey {
  id             String       @id @default(cuid())
  organizationId String
  name           String
  keyHash        String       @unique
  keyPrefix      String
  permissions    String[]
  lastUsedAt     DateTime?
  expiresAt      DateTime?
  isActive       Boolean      @default(true)
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@map("api_keys")
}

model AuditLog {
  id             String       @id @default(cuid())
  organizationId String
  userId         String?
  userEmail      String?
  action         String
  entity         String?
  entityId       String?
  oldData        Json?
  newData        Json?
  ipAddress      String?
  userAgent      String?
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId, createdAt])
  @@index([organizationId, action])
  @@map("audit_logs")
}

model Report {
  id             String              @id @default(cuid())
  organizationId String
  name           String
  type           ReportType          @default(PERFORMANCE)
  frequency      ReportFrequency     @default(ONCE)
  status         ReportStatus        @default(ACTIVE)
  platforms      IntegrationPlatform[]
  metrics        String[]
  dateRangeStart DateTime
  dateRangeEnd   DateTime
  recipients     String[]
  sendMethod     SendMethod?
  lastGenerated  DateTime?
  generatedCount Int                 @default(0)
  reportData     Json?
  isActive       Boolean             @default(true)
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  organization   Organization        @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId, status])
  @@index([organizationId, type])
  @@map("reports")
}

enum SubscriptionStatus {
  TRIALING
  ACTIVE
  PAST_DUE
  CANCELED
  UNPAID
  INCOMPLETE
}

enum MemberRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum IntegrationPlatform {
  META
  GOOGLE
  TIKTOK
  LINKEDIN
  WHATSAPP
  TWITTER
}

enum IntegrationStatus {
  PENDING
  CONNECTED
  ERROR
  EXPIRED
  DISCONNECTED
}

enum CampaignObjective {
  AWARENESS
  TRAFFIC
  ENGAGEMENT
  LEADS
  SALES
  APP_INSTALLS
  VIDEO_VIEWS
  MESSAGES
  CONVERSIONS
}

enum CampaignStatus {
  DRAFT
  PENDING
  ACTIVE
  PAUSED
  ENDED
  ERROR
  ARCHIVED
}

enum BudgetType {
  DAILY
  LIFETIME
}

enum LeadSource {
  META_ADS
  GOOGLE_ADS
  TIKTOK_ADS
  LINKEDIN_ADS
  WHATSAPP
  ORGANIC
  REFERRAL
  WEBSITE
  MANUAL
  OTHER
}

enum LeadStatus {
  NEW
  CONTACTED
  QUALIFIED
  PROPOSAL
  NEGOTIATION
  WON
  LOST
  REMARKETING
}

enum ConversationStatus {
  OPEN
  PENDING
  RESOLVED
  ARCHIVED
}

enum MessageType {
  TEXT
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
  LOCATION
  CONTACT
  STICKER
  TEMPLATE
}

enum MessageDirection {
  INBOUND
  OUTBOUND
}

enum MessageStatus {
  PENDING
  SENT
  DELIVERED
  READ
  FAILED
}

enum CreativeType {
  IMAGE
  VIDEO
  CAROUSEL
  TEXT
}

enum ReportType {
  PERFORMANCE
  AUDIENCE
  CREATIVE
  CUSTOM
}

enum ReportFrequency {
  ONCE
  DAILY
  WEEKLY
  MONTHLY
  CUSTOM
}

enum ReportStatus {
  ACTIVE
  PAUSED
  ARCHIVED
}

enum SendMethod {
  EMAIL
  WHATSAPP
  DOWNLOAD
}

// Scheduled Posts
model ScheduledPost {
  id             String              @id @default(cuid())
  organizationId String
  name           String
  platform       SocialPlatform
  scheduledDate  DateTime
  scheduledTime  String              // HH:mm format
  format         PostFormat          @default(FEED)
  text           String?
  mediaUrl       String?
  mediaType      MediaType?
  status         ScheduledPostStatus @default(SCHEDULED)
  publishedAt    DateTime?
  errorMessage   String?
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  organization   Organization        @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId, status])
  @@index([organizationId, scheduledDate])
  @@map("scheduled_posts")
}

enum SocialPlatform {
  INSTAGRAM
  FACEBOOK
  LINKEDIN
  TWITTER
  TIKTOK
}

enum PostFormat {
  FEED
  STORY
  REELS
  CAROUSEL
}

enum MediaType {
  IMAGE
  VIDEO
}

enum ScheduledPostStatus {
  SCHEDULED
  PUBLISHING
  PUBLISHED
  FAILED
  CANCELLED
}
