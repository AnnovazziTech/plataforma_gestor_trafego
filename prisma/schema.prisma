// ==========================================
// NOVOS MODELOS - Funcionalidades Adicionais
// ==========================================

// Prospecção - Gerenciamento de Prospects
model Prospect {
  id             String         @id @default(cuid())
  organizationId String
  companyName    String
  website        String?
  industry       String?
  size           String?
  location       String?
  contactName    String?
  contactEmail   String?
  contactPhone   String?
  socialMedia    Json?
  status         ProspectStatus @default(NEW)
  score          Int            @default(50)
  notes          String?
  isFavorite     Boolean        @default(false)
  lastContactAt  DateTime?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  organization   Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId, status])
  @@index([organizationId, score])
  @@map("prospects")
  @@schema("sistema_gestor")
}

enum ProspectStatus {
  NEW
  CONTACTED
  QUALIFIED
  PROPOSAL
  WON
  LOST

  @@schema("sistema_gestor")
}

// Meu Pensamento - Notas
model Note {
  id             String       @id @default(cuid())
  organizationId String
  userId         String
  title          String
  content        String
  category       String?
  tags           String[]
  isFavorite     Boolean      @default(false)
